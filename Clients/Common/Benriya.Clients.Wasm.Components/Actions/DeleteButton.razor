@using Benriya.Clients.Wasm.Components.Modals
@inherits Benriya.Clients.Wasm.Components.Actions.DeleteButtonBase

@if (isLoading)
{
    <LoadingContent/>
}
<button class="@(CssClass.isNOEOW() ? "btn btn-danger" : CssClass) @(BtnSize.isNOEOW() ? "btn-sm" : BtnSize)" @onclick="OnClickDelete">
    @if(BtnContent != null)
    {
        @BtnContent
    }
    else
    {
        <i class="fa fa-trash" aria-hidden="true"></i> @("Delete")
    }
</button>

<ModalConfirm @ref="modal" OnConfirm="ConfirmDelete">
    <Title>
        @if(Title != null)
        {
            @Title
        }
        else
        {
            <b>Delete confirmation</b>
        }
    </Title>
    <Body>
        @if (Content != null) {
            @Content
        } else {
            <span>Do you want to delete this item?</span>
         }
    </Body>    
</ModalConfirm>