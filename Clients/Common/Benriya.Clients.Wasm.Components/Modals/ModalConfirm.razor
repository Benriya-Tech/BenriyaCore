@inherits Benriya.Clients.Wasm.Components.Modals.ModalConfirmBase
<div class="modal fade @modalClass" tabindex="-1" role="dialog" style="display:@modalDisplay; overflow-y: auto;" aria-hidden="true">
    <div class="modal-dialog modal-@Size @Position" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                    <span aria-hidden="true"><i class="fa fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                @Body
            </div>
            <div class="modal-footer">
                <button type="button" class="@CssClassBtnOk" data-dismiss="modal" aria-label="Close" @onclick="OnConfirm">
                    @if (ContentBtnOk != null)
                    {
                        @ContentBtnOk
                    }
                    else {
                        <i class="fa fa-check"></i> @("Yes, Confirm")
                    }
                </button>
                <button type="button" class="@CssClassBtnCancel" data-dismiss="modal" aria-label="Close" @onclick="Close">
                @if (ContentBtnCancel != null)
                    {
                        @ContentBtnCancel
                    }
                    else {
                        <i class="fa fa-times"></i> @("Close")
                    }                
                </button>
            </div>
        </div>
    </div>
</div>
@if (showBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}
