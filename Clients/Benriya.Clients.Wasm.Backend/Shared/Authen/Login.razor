@page "/login"
@inherits Benriya.Clients.Wasm.Backend.Shared.Authen.LoginBase

<link href="/css/login.css" rel="stylesheet">

<main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
    <div class="container">
        <div class="card login-card">
            <div class="row no-gutters">
                <div class="col-md-5">
                    <img src="/images/login/landing.jpg" alt="login" class="login-card-img">
                </div>
                <div class="col-md-7">
                    <div class="card-body pt-3 pb-1" style="background-color: rgb(2,16,65);">
                        <div class="brand-wrapper">
                            <div class="text-right">
                                <div><img src="/images/logo/logo.png" alt="logo" class="logo" style="width:280px;height:auto !important"></div>
                                <div class="mt-2">
                                    <div style="height: 1px; background-image: linear-gradient(to right, rgba(208,208,206,0), rgba(208,208,206,1)); margin-right:-6em;"></div>
                                    <div class="mr-n5" style="color:red;text-shadow: 0px 0px 2px #000;">Benriya Framework version: @AppVersion</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body pt-4">                        
                        <p class="login-card-description">Sign into your account</p>
                        <EditForm Model="@model" OnValidSubmit="@HandleValidSubmit">
                            <DataAnnotationsValidator />
                            <div class="form-group">
                                <label for="email" class="sr-only">Email</label>
                                <InputText @bind-Value="model.email" class="form-control" type="text" placeholder="Email address" />
                                <ValidationMessage For="@(() => model.email)" />
                            </div>
                            <div class="form-group mb-4">
                                <label for="password" class="sr-only">Password</label>
                                <InputText @bind-Value="model.password" class="form-control" type="password" placeholder="***********" />
                                <ValidationMessage For="@(() => model.password)" />
                            </div>
                            <button type="submit" class="btn btn-block login-btn mb-4"><i class="fa fa-unlock"></i> Login</button>
                        </EditForm>
                        @if (!Message.isNOEOW())
                        {
                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                <strong>Cannot login!</strong> @Message
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true"><i class="fa fa-times"></i></span>
                                </button>
                            </div>
                        }
                        <a href="#!" class="forgot-password-link">Forgot password?</a>
                        <p class="login-card-footer-text">Don't have an account? <a href="#!" class="text-reset">Register here</a></p>
                        <nav class="login-card-footer-nav">
                            <a href="#!">Terms of use.</a>
                            <a href="#!">Privacy policy</a>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
