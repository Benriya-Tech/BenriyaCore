@page "/users/form/{id}"
@page "/users/form"
@inherits Benriya.Clients.Wasm.Backend.Pages.CoreSystem.UsersCore.UserFormBase


@if (isLoading)
{
    <LoadingContent />
}
<EditForm Model="@model" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <Benriya.Clients.Wasm.Components.Forms.FormServValidator @ref="formValidator"/>
    <div class="modal-body">
        <div class="row">
            <div class="form-group col-4">
                <label>Firstname</label>
                <InputText @bind-Value="model.firstname" class="form-control form-control-sm" type="text" />
                <ValidationMessage For="@(() => model.firstname)" />
            </div>
            <div class="form-group col-4">
                <label>Lastname</label>
                <InputText @bind-Value="@model.lastname" class="form-control form-control-sm" type="text" />
                <ValidationMessage For="@(() => model.lastname)" />
            </div>            
            <div class="form-group col-4">
                <label>Alias name</label>
                <InputText @bind-Value="@model.alias_name" class="form-control form-control-sm" type="text" />
                <ValidationMessage For="@(() => model.alias_name)" />
            </div>            
        </div>
        <div class="row">
            <div class="form-group col-3">
                <label>Email</label>
                <InputText @bind-Value="@model.email" class="form-control form-control-sm" type="email" />
                <ValidationMessage For="@(() => model.email)" />
            </div>
            <div class="form-group col-3">
                <label>Conbfirm email</label>
                <InputText @bind-Value="@model.confirm_email" class="form-control form-control-sm" type="email" />
                <ValidationMessage For="@(() => model.confirm_email)" />
            </div>
            @if (!has_id)
            {
                <div class="form-group col-3">
                    <label>Password</label>
                    <InputText @bind-Value="@model.password" class="form-control form-control-sm" type="password" />
                    <ValidationMessage For="@(() => model.password)" />
                </div>
                <div class="form-group col-3">
                    <label>Confirm password</label>
                    <InputText @bind-Value="@model.confirm_password" class="form-control form-control-sm" type="password" />
                    <ValidationMessage For="@(() => model.confirm_password)" />
                </div>
            }
        </div>
    </div>
    <div class="modal-footer justify-content-center">

        <button type="submit" class="btn btn-primary">Save</button>
        @if (has_id)
        {
            <button type="button" class="btn btn-secondary" @onclick="@OnCancel">Close</button>
        }
        else
        {
            <button type="button" class="btn btn-secondary" @onclick="@ResetModel">Clear</button>
        }

    </div>
</EditForm>
